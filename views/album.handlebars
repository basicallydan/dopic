{{#with album}}
<div class="album-view" id="existingAlbumDropzone">
	<div class="images cf">
		<h2>{{{albumNameOrDefault @root.album}}}</h2>
		<section class="short-link-form cf">
			<p>Get your friends to contribute: <input type="text" id="shortLink" name="shortLink" class="no-edit autohighlight res-not-hh wide-on-hh" value="{{links.web}}" /> <a href="{{links.web}}" id="shortLinkCopy" class="button primary wide-on-hh"><span class="res-not-hh flash-available">Copy to clipboard</span><span class="res-hh flash-available">Copy link to clipboard</span><span class="flash-not-available">Share this link</span></a></p>
		</section>
		<div id="newImagePreviewsContainer">
			{{#each files}}
			<div class="image">
				<a class="internal-link" href="{{links.web}}" style="background-image:url({{links.imageW288}})"></a>
			</div>
			{{/each}}
		</div>
		<div class="new-image-button">
			<a id="newImageButton"></a>
		</div>
	</div>
</div>
{{/with}}

<div class="share-hint hidden">
	<p class="share-hint-in-chrome"></p>
	<p class="share-hint-in-safari"></p>
</div>

<div id="newImagePreviewTemplate" style="display: none;">
	<div class="image">
		<div class="image-inner"></div>
		<span class="hidden" data-dz-name></span>
		<div class="dz-progress"><span class="dz-upload" data-dz-uploadprogress></span></div>
	</div>
