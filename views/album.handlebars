{{#with album}}
<div class="album-view">
	<section class="short-link-form cf">
		<p>Get your friends to contribute: <input type="text" id="shortLink" name="shortLink" class="no-edit autohighlight" value="{{links.web}}" /> <a id="shortLinkCopy">Copy to clipboard</a></p>
	</section>
	<div class="images cf" id="existingAlbumDropzone">
		<h2>{{{albumNameOrDefault @root.album}}}</h2>
		{{#each files}}
		<div class="image">
			<a class="internal-link" href="{{links.web}}" style="background-image:url({{links.imageW288}})"></a>
		</div>
		{{/each}}
		<div class="new-image-button">
			<a id="newImageButton"><span class="new-image-button-plus">+</span><span class="res-not-hh">Drag or select a new image</span></a>
		</div>
	</div>
</div>
{{/with}}

<div id="newImagePreviewTemplate" style="display: none;">
	<div class="dz-preview dz-file-preview image">
		<img data-dz-thumbnail />
		<div class="dz-progress"><span class="dz-upload" data-dz-uploadprogress></span></div>
	</div>
