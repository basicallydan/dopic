<div>
	<div class="signUpView">
		{{#if user}}
		{{else}}
		<section id="signUp" class="one-line-form cf">
			<form id="signUpForm">
				<label for="signUpEmail">Use Swumo on other devices by signing up:</label>
				<input type="email" placeholder="you@example.com" id="signUpEmail" name="email">
				<input type="password" placeholder="password" id="signUpPassword" name="password">
				<input type="submit" id="signUpInput" value="Sign up">
			</form>
		</section>
		{{/if}}
	</div>
	{{#each albums}}
	<a class="images cf one-line internal-link" href="{{links.web}}">
		{{#each files}}
		<div class="image" style="background-image:url({{links.image}})"></div>
		{{/each}}
	</a>
	{{/each}}
</div>