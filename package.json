    "cookie-parser": "~1.3.3",
    "debug": "~2.1.1",
    "errorhandler": "^1.3.4",
    "escape-regex-string": "^1.0.3",
    "express": "~4.11.0",
    "express-handlebars": "^1.1.0",
    "express-session": "^1.10.3",
    "font-awesome": "^4.3.0",
    "jade": "~1.9.0",
    "lodash": "^3.4.0",
    "mongoose": "^3.8.21",
    "morgan": "~1.5.1",
    "multer": "^0.1.7",
    "multiparty": "^4.1.1",
    "passport": "^0.2.1",
    "passport-local": "^1.0.0",
